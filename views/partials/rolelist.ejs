<script>
    function roleList() {
        $.post("/rolesList", {}, function(result) {
            var html = ``;
            if (result.length) {
                $.each(result, (index, value) => {
                    let status = 'checked';
                    if (value.status == 'INACTIVE')
                        status = '';
                    html += `<tr>
                                <td><input type="checkbox" id="checkOne" name="checkOne" class="form-check-input" /></td>
                                <td>${value.name}</td>
                                <td><span class="form-switch">
                                        <input class="form-check-input" type="checkbox"
                                            id="flexSwitchCheckDefault" ${status}>
                                    </span></td>
                                <td>
                                    <a role="button" data-bs-toggle="modal" data-bs-target="#updateUserModal" onclick="updaterolePromt(${value.id})">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit align-middle">
                                            <path
                                                d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7">
                                            </path>
                                            <path
                                                d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z">
                                            </path>
                                        </svg></a>
                                    <a role="button" data-bs-toggle="modal" data-bs-target="#deleteUserModal" onclick="deletePromt(${value.id},'${value.name}')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash align-middle">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path
                                                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                            </path>
                                        </svg></a>
                                </td>
                            </tr>`
                })
                $("#roleList").html(html)
            }
        });
    }
</script>